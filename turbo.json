{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "root#build": {
      "dependsOn": [
        "^build",
        "$ANALYTICS_URL",
        "$BLOG_URL",
        "$DOCS_URL",
        "$FURO_URL",
        "$LANDING_URL",
        "$SWAP_URL",
        "$LEGACY_URL"
      ],
      "outputs": [".next/**"],
      "cache": true
    },
    "build": {
      "cache": true,
      "outputs": [
        ".next/**",
        "dist/**",
        "typechain/**",
        "artifacts/**",
        "cache/**"
      ],
      "dependsOn": [
        "^build",
        "generate"
      ],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^build",
        "generate"
      ],
      "cache": false
    },
    "generate": {
      "cache": true,
      "dependsOn": [
        "^build",
        "$REDIS_URL"
      ],
      "outputs": [
        "^build",
        ".graphclient/**",
        ".mesh/**",
        "typechain/**"
      ]
    },
    "test": {
      "cache": true,      
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "dependsOn": [
        "^build"
      ]
    },
    "validate": {
      "cache": false
    },
    "export": {
      "cache": true,
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "exports.json"
      ]
    },
    "node": {
      "cache": true,
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "deployments/**"
      ]
    }
  },
  "globalDependencies": [
    ".env",
    "tsconfig.json",
    "$NODE_ENV"
  ],
  "baseBranch": "origin/master"
}
